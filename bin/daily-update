#!/bin/bash

if [[ -n $USING_MAC_OS ]]; then
  PATH="\
/usr/local/bin:\
/usr/local/sbin:\
/usr/bin:\
/usr/sbin:\
/bin:\
/sbin:
"
  unalias -a
  brew update
  brew update
  brew upgrade
else
  apt-get -y update
  apt-get -y upgrade
  apt-get -y dist-upgrade
fi

$HOME/.bin/pip-upgrade
$HOME/.bin/pip-upgrade -3

if [[ -n "$(command -v npm)" ]]; then
  npm update -g
  npm upgrade -g
fi

if [[ -n $USING_MAC_OS ]]; then
  brew doctor
fi

\. $HOME/.bashrc
